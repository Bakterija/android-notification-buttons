#:kivy 1.8.0
<NotificationDemo>:
	ScrollView:
		id: 'scroller'
		size_hint: 1, 0.4

    Label:
        id: 'togls'
        text: 'Notification\ntoggles:'
        size_hint: 0.31, 0.1
        canvas.before:
            Color:
                rgba: 0.3, 0.3, 0.3, 1
            Rectangle:
                pos: self.pos
                size: self.size
    Button:
        text: 'ongoing'
        size_hint: 0.23, 0.1
        on_press: root.toggle_ongoing()
        background_color: 0.5,0.5,0.5,1
    Button:
        text: 'autocancel'
        size_hint: 0.23, 0.1
        on_press: root.toggle_autocancel()
        background_color: 0.5,0.5,0.5,1
    Button:
        text: 'subtext'
        size_hint: 0.23, 0.1
        on_press: root.toggle_subtext()
        background_color: 0.5,0.5,0.5,1

    Button:
        text: 'Play'
        size_hint: 1, 0.2
        on_press: root.play()

    Button:
        text: 'Pause'
        size_hint: 1, 0.2
        on_press: root.pause()

    Button:
        text: 'Stop service'
        size_hint: 0.5, 0.1
        on_press: root.quit()
    Button:
        text: 'Remove notification'
        size_hint: 0.5, 0.1
        on_press: root.remove_notification()
